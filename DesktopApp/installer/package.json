{
  "name": "graphi-installer",
  "description": "Premium Installer for Graphi Desktop",
  "author": "Graphi Team <support@graphi.app>",
  "version": "1.0.0",
  "main": "main.js",
  "private": true,
  "dependencies": {
    "adm-zip": "^0.5.10",
    "axios": "^1.6.2",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "electron": "28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.graphi.installer",
    "productName": "Graphi-Desktop-Win-Installer",
    "win": {
      "target": "nsis",
      "icon": "../graphi-icon.ico"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "allowToChangeInstallationDirectory": false,
      "allowElevation": true,
      "createDesktopShortcut": false,
      "installerIcon": "../graphi-icon.ico"
    },
    "files": [
      "package.json",
      "main.js",
      "index.html",
      "index.css",
      "renderer.js",
      "node_modules/**/*"
    ]
  }
}
